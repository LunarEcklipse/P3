{
    "manifest_version": 3,
    "name": "Defandomizer",
    "version": "1.0.0",

    "description": "An extension that really, really hates Fandom wikis.",

    "author": "kaden.duncanmatis@uleth.ca",
    "content_scripts": [
        {
            "matches": [
                "*://*.fandom.com/*",
                "*://fandom.com/*",
                "*://www.fandom.com/*",
                "*://*.fandom.com/",
                "*://fandom.com/",
                "*://www.fandom.com/"
            ],
            "js": ["scripts/defandomizer.js"],
            "run_at": "document_end",
            "world": "ISOLATED"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "data/sites.json" ],
            "matches": ["<all_urls>"],
            "extension_ids": []
        }
    ]
}